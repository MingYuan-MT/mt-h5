/**index.wxss**/
.container {
  width: 100%;
}

.tabs {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.tab-item {
  position: relative;
  padding: 10px 0;
  font-weight: bold;
}
.active {
  width: 30px;
  background: dodgerblue;
  height: 3px;
  position: absolute;
  left: 50%;
  margin-left: -15px;
  bottom: 0;
}

/* form */
.w-form-item {
  width: 100%;
  height: 50px;
  line-height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: right;
  border-bottom: 1px solid #d9d9d9;
}
.w-form-label {
  width: 110px;
}
.w-form-content {
  flex: 1;
  padding: 0;
  text-align: left;
  padding: 0 10px 0 30px;
  display: flex;
}
.tag {
  height: 24px;
  line-height: 24px;
  padding: 2px 15px;
  margin-right: 10px;
  border: 1px solid #d8d8d8;
  border-radius: 3px;
}
.tag-active {
  background-color: goldenrod;
}

/* 按钮 */
.btn-group {
  width: 100%;
  padding: 80rpx 0;
}
.btn-wrap {
  padding: 0 30rpx;
}
