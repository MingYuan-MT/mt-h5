.container {
  width: 100%;
  background: #F8F9FD;
  height: 100vh;
}
.y-wrap {
  width: 80%;
  padding: 50px 10px;
}
.y-pic {
  width: 100%;
  height: 240px;
  /* border: 1px solid #d8d8d8; */
  border-radius: 3px;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.y-image {
  width: 160px;
  height: 160px;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -80px;
  margin-left: -80px;
  /* transform-origin: 50% 50%; */
}
.y-info {
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
}