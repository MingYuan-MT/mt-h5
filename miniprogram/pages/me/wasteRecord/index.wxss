/**index.wxss**/
.info-wrap {
  width: 100%;
  padding: 30px 20px;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  border: 1px solid #d8d8d8;
}
.cur-month-count-wrap {
  width: 50%;
  height: 80px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 20px;
  /* border-right: 1px solid #d8d8d8; */
}
.cur-month-title {
  width: 100%;
  font-size: 20px;
  font-weight: bold;
  line-height: 30px;
  text-align: center;
}
.border {
  border-right: 1px solid black;
}
.cur-month-count {
  width: 100%;
  font-size: 28px;
  line-height: 30px;
  text-align: center;
  /* font-weight: bold; */
}


/* list */
.list {
  width: 100%;
  background: #F8F9FD;
}
.list-item {
  padding: 30px 20px;
  border: 1px solid #d8d8d8;
}
.notice {
  margin-bottom: 20px;
  font-size: 18px;
}
.date {
  color: green;
  font-size: 18px;
}